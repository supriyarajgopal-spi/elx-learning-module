function elx_utility_feeds_processor_targets_alter(&$targets, $entity_type, $bundle_name) {
  if ($entity_type == 'user') {
    $targets['pass'] = array(
      'name' => t('Password'),
      'description' => t('Shows up in legend on mapping form.'),
      'callback' => 'elx_utility_set_target',
    );
  }
}

